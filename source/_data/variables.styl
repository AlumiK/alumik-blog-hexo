// Scaffolding
// Settings for some of the most global styles.
// --------------------------------------------------
// Global text color on <body>
$text-color = $black;

// Typography
// Font, line-height, and elements colors.
// --------------------------------------------------
// Font size
$font-size-medium = .875em;
$font-size-large = 1em;
$font-size-larger = 1.125em;
$font-size-largest = 1.5em;

// Global line height
$line-height-base = 1.8;
$line-height-code-block = 1.5; // Can't be less than 1.3;

// Code & Code Blocks
// --------------------------------------------------
$code-foreground = #c7254e;
$code-background = #fcf1f2;

// Buttons
// --------------------------------------------------
$btn-default-radius = 10px;
$btn-default-bg = #5c5c5c;
$btn-default-color = white;
$btn-default-border-color = #5c5c5c;
$btn-default-hover-bg = #5c5c5c;
$btn-default-hover-color = white;
$btn-default-hover-border-color = $black-deep;

// Note colors
// --------------------------------------------------
$note-border-radius = 10px;

// Borders
// --------------------------------------------------
$border-radius-inner = 0 0 10px 10px;
$border-radius = 10px;
